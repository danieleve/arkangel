<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tutor">

    <ImageView
        android:id="@+id/rai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rai"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25sp"
        android:layout_marginTop="50dp"/>
    <TextView
        android:id="@+id/register"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Soy padre o tutor"
        android:textSize="24dp"
        android:background="#8d45b5"
        android:textColor="@color/textColor"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rai"
        android:layout_marginTop="-30dp"
        android:padding="15dp"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/codigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register"
        android:layout_centerHorizontal="true"
        android:ems="12"
        android:inputType="number"
        android:hint="Ingresa aquí el\ncodigo del niño"
        android:layout_marginTop="20dp"
        android:background="@drawable/codigo_bg"
        android:padding="20dp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/next"
        android:layout_below="@+id/codigo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>